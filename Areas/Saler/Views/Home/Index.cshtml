<!-- Areas/Saler/Views/Home/Index.cshtml -->
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Areas/Saler/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4">
    <div class="col-md-12">
        <h2>Chào mừng đến với hệ thống POS!</h2>
        <p class="lead">Quản lý bán hàng và khách hàng dễ dàng.</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.TodayOrders</h4>
                        <p>Đơn hàng hôm nay</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-shopping-cart fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.TodayRevenue.ToString("N0")</h4>
                        <p>Doanh thu hôm nay</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.TotalCustomers</h4>
                        <p>Tổng khách hàng</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>POS</h4>
                        <p>Hệ thống bán hàng</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-store fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Truy cập nhanh</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a href="/Saler/Order/Create" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fas fa-cash-register fa-2x d-block mb-2"></i>
                            Bán hàng
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/Saler/Customer/Create" class="btn btn-success btn-lg w-100 mb-3">
                            <i class="fas fa-user-plus fa-2x d-block mb-2"></i>
                            Thêm khách hàng
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/Saler/Order/Index" class="btn btn-info btn-lg w-100 mb-3">
                            <i class="fas fa-list fa-2x d-block mb-2"></i>
                            Lịch sử đơn hàng
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/Saler/Customer/Index" class="btn btn-warning btn-lg w-100 mb-3">
                            <i class="fas fa-users fa-2x d-block mb-2"></i>
                            Danh sách khách hàng
                        </a>
                    </div>
                    <div class="col-md-3"></div>
                    <a href="/Saler/Report/CreateDailyRevenue" class="btn btn-danger btn-lg w-100 mb-3">
                        <i class="fas fa-chart-line fa-2x d-block mb-2"></i>
                        Tạo báo cáo
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
