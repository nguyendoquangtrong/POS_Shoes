<!-- Areas/Saler/Views/Order/Index.cshtml -->
@model IEnumerable<Order>
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    Layout = "~/Areas/Saler/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5><i class="fas fa-list"></i> Lịch sử đơn hàng</h5>
                <a href="/Saler/Order/Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Tạo đơn hàng mới
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Mã đơn hàng</th>
                                <th>Ngày tạo</th>
                                <th>Khách hàng</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>#@order.OrderID.ToString().Substring(0, 8)</td>
                                    <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (order.Customer != null)
                                        {
                                            <span>@order.Customer.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Khách lẻ</span>
                                        }
                                    </td>
                                    <td>@order.TotalPrice.ToString("N0") VND</td>
                                    <td>
                                        <span class="badge bg-success">@order.Status</span>
                                    </td>
                                    <td>
                                        <a href="/Saler/Order/Receipt/@order.OrderID" class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> Xem hóa đơn
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
