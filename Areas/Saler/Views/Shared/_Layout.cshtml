<!-- Areas/Saler/Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS Shoes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        .pos-container {
            min-height: 100vh;
        }

        .product-card {
            cursor: pointer;
            transition: all 0.3s;
        }

        .product-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .cart-item {
            border-bottom: 1px solid #eee;
            padding: 10px 0;
        }

        .barcode-input {
            font-family: monospace;
        }

        .sidebar {
            background: #f8f9fa;
            min-height: 100vh;
        }

        .nav-link {
            color: #495057;
        }

        .nav-link:hover {
            color: #007bff;
        }

        .nav-link.active {
            color: #007bff;
            font-weight: bold;
        }

        /* New styles for product modal */
        .product-image-container {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            min-height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .product-image-container img {
            max-height: 280px;
            object-fit: contain;
        }

        #productModal .modal-content {
            border-radius: 15px;
            border: none;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        #productModal .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }

        #productModal .btn {
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
        }

        #productModal .input-group button {
            border-radius: 6px;
        }

        #productModal .input-group input {
            border-left: none;
            border-right: none;
            border-radius: 0;
            text-align: center;
        }

        #modalPrice {
            color: #28a745 !important;
            font-size: 1.2em;
        }

        #modalStock {
            color: #17a2b8;
        }

        .product-modal-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #333;
        }

        #phoneSearchInput {
            border-right: none;
        }

        #searchPhoneBtn {
            border-left: none;
        }

        #searchResult .alert {
            padding: 10px;
            margin: 0;
        }

        #searchStatus {
            font-size: 0.9em;
        }

        .search-loading {
            color: #007bff;
        }

        .search-error {
            color: #dc3545;
        }

        .search-success {
            color: #28a745;
        }

        .phone-input-highlight {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
    </style>

</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Saler/Home">
                <i class="fas fa-store"></i> POS Shoes - @ViewData["UserRole"]
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Saler/Home">
                            <i class="fas fa-home"></i> Trang chủ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Saler/Order/Create">
                            <i class="fas fa-cash-register"></i> Bán hàng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Saler/Customer/Create">
                            <i class="fas fa-user-plus"></i> Thêm khách hàng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Saler/Order/Index">
                            <i class="fas fa-list"></i> Lịch sử đơn hàng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Saler/Report/Index">
                            <i class="fas fa-chart-line"></i> Báo cáo
                        </a>
                    </li>
                </ul>
                <div class="navbar-nav">
                    <span class="navbar-text me-3">@ViewData["WelcomeMessage"]</span>
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="nav-link btn btn-link text-white"
                            style="border: none; background: none;">
                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                        </button>
                    </form>
                </div>
            </div>
        </div>
        </div>
    </nav>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>