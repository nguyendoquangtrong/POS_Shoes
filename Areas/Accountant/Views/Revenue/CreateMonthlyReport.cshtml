@using POS_Shoes.Models.ViewModels
@model MonthlyRevenueReportViewModel
@{
    ViewData["Title"] = "Lập báo cáo tháng";
    Layout = "~/Areas/Accountant/Views/Shared/_Layout.cshtml";
}

<h4 class="mb-4"><i class="fas fa-file-alt"></i> Lập báo cáo doanh thu tháng</h4>

<form asp-action="CreateMonthlyReport" method="post" class="row g-3">
    <div class="col-md-2">
        <label asp-for="Month" class="form-label"></label>
        <input asp-for="Month" class="form-control" type="number" min="1" max="12">
        <span asp-validation-for="Month" class="text-danger"></span>
    </div>
    <div class="col-md-2">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" type="number" min="2020" max="2100">
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="col-md-8">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" placeholder="Ghi chú (tuỳ chọn)">
    </div>

    <div class="col-12">
        <button class="btn btn-primary">
            <i class="fas fa-save"></i> Tạo báo cáo
        </button>
        <a asp-action="Reports" class="btn btn-secondary">Danh sách báo cáo</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
