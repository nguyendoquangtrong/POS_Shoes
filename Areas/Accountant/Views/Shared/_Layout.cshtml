<!-- Areas/Accountant/Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS Shoes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            background: #f8f9fa;
            min-height: 100vh;
        }

        .nav-link {
            color: #495057;
        }

        .nav-link:hover {
            color: #007bff;
        }

        .nav-link.active {
            color: #007bff;
            font-weight: bold;
        }

        .stats-card {
            transition: transform 0.2s;
        }

        .stats-card:hover {
            transform: translateY(-5px);
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Accountant/Home">
                <i class="fas fa-calculator"></i> POS Shoes - @ViewData["UserRole"]
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Accountant/Home">
                            <i class="fas fa-home"></i> Trang chủ
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="payrollDropdown" role="button"
                            data-bs-toggle="dropdown">
                            <i class="fas fa-money-bill-wave"></i> Quản lý lương
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Accountant/PaySlip/Create">Tạo phiếu lương</a></li>
                            <li><a class="dropdown-item" href="/Accountant/PaySlip/Index">Danh sách phiếu lương</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="revenueDropdown" role="button"
                            data-bs-toggle="dropdown">
                            <i class="fas fa-chart-line"></i> Quản lý doanh thu
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Accountant/Revenue/Overview">Xem doanh thu</a></li>
                            <li><a class="dropdown-item" href="/Accountant/Revenue/CreateMonthlyReport">Lập báo cáo
                                    tháng</a></li>
                            <li><a class="dropdown-item" href="/Accountant/Revenue/Reports">Danh sách báo cáo</a></li>
                        </ul>
                    </li>
                    <!-- Areas/Accountant/Views/Shared/_Layout.cshtml -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="revenueDropdown" role="button"
                            data-bs-toggle="dropdown">
                            <i class="fas fa-chart-line"></i> Thống kê doanh thu
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Accountant/Revenue/ApprovedReports">Báo cáo đã duyệt</a>
                            </li>
                            <li><a class="dropdown-item" href="/Accountant/Revenue/Overview">Tổng quan doanh thu</a>
                            </li>
                            <li><a class="dropdown-item" href="/Accountant/Revenue/CreateMonthlyReport">Lập báo cáo
                                    tháng</a></li>
                            <li><a class="dropdown-item" href="/Accountant/Revenue/Reports">Danh sách báo cáo tháng</a>
                            </li>
                        </ul>
                    </li>

                </ul>
                <div class="navbar-nav"></div>
                <span class="navbar-text me-3">@ViewData["WelcomeMessage"]</span>
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="nav-link btn btn-link text-white"
                        style="border: none; background: none;">
                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                    </button>
                </form>
            </div>
        </div>
        </div>
    </nav>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
