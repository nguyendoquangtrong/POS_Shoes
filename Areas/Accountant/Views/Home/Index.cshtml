<!-- Areas/Accountant/Views/Home/Index.cshtml -->
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Areas/Accountant/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4">
    <div class="col-md-12">
        <h2>Chào mừng đến với hệ thống kế toán!</h2>
        <p class="lead">Quản lý lương và thống kê doanh thu từ báo cáo đã duyệt.</p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mt-4">
    <div class="col-md-2">
        <div class="card bg-info text-white stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.TotalEmployees</h4>
                        <p>Nhân viên</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card bg-primary text-white stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.MonthlyPaySlips</h4>
                        <p>Phiếu lương tháng</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-money-bill-wave fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card bg-success text-white stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@(((double)ViewBag.ApprovedRevenueThisMonth).ToString("N0"))</h4>
                        <p>DT đã duyệt (tháng)</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-chart-line fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card bg-warning text-white stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.ApprovedReportsThisMonth</h4>
                        <p>BC đã duyệt (tháng)</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-file-check fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card bg-danger text-white stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.PendingPaySlips</h4>
                        <p>Phiếu lương chờ</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card bg-purple text-white stats-card" style="background-color: #6f42c1 !important;">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.ApprovedReportsToday</h4>
                        <p>BC duyệt hôm nay</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-rocket"></i> Truy cập nhanh</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a href="/Accountant/PaySlip/Create" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fas fa-plus fa-2x d-block mb-2"></i>
                            Tạo phiếu lương
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/Accountant/Revenue/ApprovedReports" class="btn btn-success btn-lg w-100 mb-3">
                            <i class="fas fa-file-check fa-2x d-block mb-2"></i>
                            Báo cáo đã duyệt
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/Accountant/Revenue/Overview" class="btn btn-info btn-lg w-100 mb-3">
                            <i class="fas fa-chart-line fa-2x d-block mb-2"></i>
                            Thống kê doanh thu
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/Accountant/Revenue/CreateMonthlyReport" class="btn btn-warning btn-lg w-100 mb-3">
                            <i class="fas fa-file-alt fa-2x d-block mb-2"></i>
                            Lập báo cáo tháng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approved Reports Summary -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5><i class="fas fa-chart-bar"></i> Tóm tắt báo cáo đã duyệt tháng này</h5>
                <a href="/Accountant/Revenue/ApprovedReports" class="btn btn-sm btn-primary">
                    <i class="fas fa-eye"></i> Xem chi tiết
                </a>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card border-success">
                            <div class="card-body text-center">
                                <i class="fas fa-money-bill-wave fa-3x text-success mb-2"></i>
                                <h4 class="text-success">@(((double)ViewBag.ApprovedRevenueThisMonth).ToString("N0"))
                                    VND</h4>
                                <p class="text-muted">Tổng doanh thu đã duyệt</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-primary">
                            <div class="card-body text-center">
                                <i class="fas fa-file-check fa-3x text-primary mb-2"></i>
                                <h4 class="text-primary">@ViewBag.ApprovedReportsThisMonth</h4>
                                <p class="text-muted">Báo cáo đã duyệt tháng này</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-info">
                            <div class="card-body text-center">
                                <i class="fas fa-calculator fa-3x text-info mb-2"></i>
                                <h4 class="text-info">
                                    @if (ViewBag.ApprovedReportsThisMonth > 0)
                                    {
                                        @(((double)ViewBag.ApprovedRevenueThisMonth /
                                                                            ViewBag.ApprovedReportsThisMonth).ToString("N0"))
                                    }
                                    else
                                    {
                                        @("0")
                                    }
 VND
                                </h4>
                                <p class="text-muted">Doanh thu TB/báo cáo</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stats-card {
        transition: transform 0.2s;
    }

    .stats-card:hover {
        transform: translateY(-5px);
    }
</style>
